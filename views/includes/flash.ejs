<!-- Flash Messages -->
<div class="position-fixed top-0 end-0 p-4" style="z-index: 1100; width: 100%; max-width: 400px;">
  <% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm rounded-3 px-4 py-3 mb-3 d-flex justify-content-between align-items-center" role="alert">
      <div class="me-3">
        <strong class="fw-semibold"></strong> <%= success %>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm rounded-3 px-4 py-3 d-flex justify-content-between align-items-center" role="alert">
      <div class="me-3">
        <strong class="fw-semibold"></strong> <%= error %>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
</div>
